<% layout('layouts/boilerplate')%>  
<div class="main d-flex justify-content-center align-items-center mt-5">  
    <form action="/login" class="login-box container validated-form" method="POST">
      <div class="mt-5">
        <label class="form-label" for="username">Username</label>
        <input type="text" class="form-control" name="username" id="username" placeholder="Username" required>
      </div>
      <div class="mt-3">
        <label class="form-label" for="password">Password</label>
        <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
      </div>
      <div class="d-flex justify-content-center">
        <button class="btn btn-primary mt-5 login-btn-style">Login</button>
      </div>
      

    </form>
</div>